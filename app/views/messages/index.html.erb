<div class="container">
  <h2>Create new message</h2>
  <p>Send a message with twilio</p>
    <%= form_for @message, :action => "create",  :remote => true do |f| %>
    <div class="form-group">
      <label for="from">From:</label>
      <%=f.text_field "from", class:"form-control", :required => "required"%>
    </div>
    <div class="form-group">
      <label for="to">To:</label>
      <%=f.text_field "to", class:"form-control", :required => "required"%>
    </div>
     <div class="form-group">
      <label for="body">Body:</label>
      <%=f.text_area "body", class:"form-control", :required => "required"%>
    </div>
    <%= f.submit%>
  <% end %>

<hr/>
<div id="history">
  <%= render :partial => "list"%>
</div>
</div>
